<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.babyshop.ui.LoginController" alignment="CENTER" spacing="20" style="-fx-background-color: #f0f4f8; -fx-padding: 20;">
    <Label text="Login" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 250; -fx-font-size: 14px;"/>
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250; -fx-font-size: 14px;"/>

    <Button text="Login" fx:id="btnLogin" onAction="#handleLogin" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5;"/>

    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red; -fx-font-size: 14px;"/>
</VBox>
