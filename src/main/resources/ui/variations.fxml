<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.babyshop.ui.VariationController">

    <!-- Header Section -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Variations Dashboard" />
    </HBox>

    <!-- Sales Data Table -->
    <TableView fx:id="variationTable" prefWidth="800" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);">
        <columns>
            <TableColumn fx:id="colVariationId" prefWidth="147.0" text="Variation ID" />
            <TableColumn fx:id="colVariationType" prefWidth="215.0" text="Variation Type" />
            <TableColumn fx:id="colVariationValue" prefWidth="210.0" text="Variation Value" />
         <TableColumn fx:id="colAction" prefWidth="223.0" text="Action" />
        </columns>
    </TableView>

    <!-- Add Sale Form Section -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #ffffff; -fx-border-radius: 5; -fx-padding: 20; -fx-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);">
        <HBox alignment="CENTER" spacing="15">
            <TextField fx:id="variationTypeField" promptText="Variation Type" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
            <TextField fx:id="variationValueField" promptText="Variation Value" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
        </HBox>

        <Button fx:id="btnAddVariation" onAction="#handleAddVariation" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5;" text="Add Variation" />
    </VBox>

    <!-- Message Label -->
    <Label fx:id="messageLabel" style="-fx-text-fill: green; -fx-font-size: 14px;" text="" />

</VBox>
