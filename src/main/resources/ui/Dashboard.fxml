<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.babyshop.ui.DashboardController">
    <!-- Sidebar -->
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #3498db; -fx-padding: 20;">
            <Button onAction="#showProducts" style="-fx-background-color: #ffffff; -fx-text-fill: #3498db; -fx-font-size: 16px; -fx-padding: 10 20; -fx-pref-width: 150px;" text="Products" />
            <Button onAction="#showSales" style="-fx-background-color: #ffffff; -fx-text-fill: #3498db; -fx-font-size: 16px; -fx-padding: 10 20; -fx-pref-width: 150px;" text="Sales" />
         <Button layoutX="30.0" layoutY="90.0" onAction="#showVariations" style="-fx-background-color: #ffffff; -fx-text-fill: #3498db; -fx-font-size: 16px; -fx-padding: 10 20; -fx-pref-width: 150px;" text="Variations" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <AnchorPane fx:id="contentArea" />
    </center>
</BorderPane>
