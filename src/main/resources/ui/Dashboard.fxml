<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.babyshop.ui.DashboardController">
    <!-- Sidebar -->
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #3498db; -fx-padding: 20;">
            <Button text="Products" onAction="#showProducts" style="-fx-background-color: #ffffff; -fx-text-fill: #3498db; -fx-font-size: 16px; -fx-padding: 10 20; -fx-pref-width: 150px;" />
            <Button text="Sales" onAction="#showSales" style="-fx-background-color: #ffffff; -fx-text-fill: #3498db; -fx-font-size: 16px; -fx-padding: 10 20; -fx-pref-width: 150px;" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <AnchorPane fx:id="contentArea" />
    </center>
</BorderPane>
